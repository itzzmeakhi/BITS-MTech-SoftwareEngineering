<?xml version="1.0" encoding="UTF-8"?>
<aiml version="1.0.1" encoding="UTF-8">

  <category>
    <pattern>WHAT IS YOUR NAME</pattern>
    <template>My name is ChatBot!</template>
  </category>

  <category>
    <pattern>MY NAME IS *</pattern>
    <template>
      <think>
        <set name="username"><star/></set>
      </think>
      Nice to meet you, <get name="username"/>!
    </template>
  </category>

  <category>
    <pattern>HI</pattern>
    <template>Hello there! How can I help you today?</template>
  </category>

  <category>
    <pattern>HELLO</pattern>
    <template>Hey! Nice to see you.</template>
  </category>

</aiml>
